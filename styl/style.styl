*
	margin 0
	padding 0
	box-sizing border-box
	font-family monospace
html, body
	width 100%
	height 100%
.wrapper
	width 100%
	height 100%
	position relative
	display flex
	align-items center
	justify-content center
.wrapper
	&:after
		content ""
		background-image url(../img/drums.jpg)
		background-size cover
		background-position center
		opacity 0.5
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index -1
.keys
	width 80%
	display flex
	align-items center
	justify-content space-between
	padding 0 50px
	.key
		width 10%
		padding 15px 5px
		background-color rgba(68,68,68,0.6)
		border-radius 3px
		border 2px solid #444444
		text-align center
		transition all 0.07s
		kbd
			color #eeeeee
			font-size 24px
		span
			color #ffc600
.playing
	transform scale(1.1)
	border-color #ffc600
	box-shadow 0 0 10px #ffc600